{
  "name": "flesch",
  "version": "1.0.0",
  "description": "Formula to detect the ease of reading a text according to Flesch Reading Ease (1975)",
  "license": "MIT",
  "keywords": [
    "flesch",
    "readability",
    "formula"
  ],
  "files": [
    "index.js"
  ],
  "repository": "https://github.com/wooorm/flesch",
  "bugs": "https://github.com/wooorm/flesch/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {},
  "devDependencies": {
    "browserify": "^13.0.1",
    "esmangle": "^1.0.1",
    "is-nan": "^1.2.1",
    "nyc": "^7.0.0",
    "remark-cli": "^2.0.0",
    "remark-comment-config": "^4.0.0",
    "remark-github": "^5.0.0",
    "remark-lint": "^4.0.0",
    "remark-validate-links": "^4.0.0",
    "tape": "^4.0.0",
    "xo": "^0.16.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js --bare -s flesch > flesch.js",
    "build-mangle": "esmangle flesch.js > flesch.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "ignores": [
      "flesch.js",
      "flesch.min.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "plugins": {
      "comment-config": null,
      "github": null,
      "lint": {
        "list-item-spacing": false
      },
      "validate-links": null
    },
    "settings": {
      "bullet": "*"
    }
  }
}
